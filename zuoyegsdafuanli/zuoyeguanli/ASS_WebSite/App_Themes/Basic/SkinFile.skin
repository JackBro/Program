    <SelectedRowStyle BackColor="#FFF566" Font-Bold="True" ForeColor="Black" />
    <FooterStyle BackColor="#FFCC66" ForeColor="White" />
    <PagerStyle BackColor="#FFCC66" ForeColor="White" HorizontalAlign="Left" />
</asp:GridView>

<asp:DetailsView runat="server" SkinID="detailsviewSkinYellow" CellPadding="4" ForeColor="Black" GridLines="None">
    <HeaderStyle BackColor="#FFFF99" ForeColor="White" Font-Bold="True" />
    <FieldHeaderStyle BackColor="#FFFF99" Font-Bold="True" />
    <RowStyle BackColor="#FFFBD6" ForeColor="Black" />
    <AlternatingRowStyle BackColor="#FFFBD6" ForeColor="Black" />
    <EditRowStyle BackColor="#FFFBD6" />
    <CommandRowStyle BackColor="#FFF566" Font-Bold="True" />
    <FooterStyle BackColor="#FFFBD6" Font-Bold="True" ForeColor="White" />
    <PagerStyle BackColor="#FFCC66" ForeColor="White" HorizontalAlign="Center" />
</asp:DetailsView>

<%-- 管理员相关页面(Green) GridView，DetailView样式 --%>

<asp:GridView runat="server" SkinId="gridviewSkinGreen" BackColor="#F0FBEB" BorderColor="#C2ECA7" BorderStyle="solid" BorderWidth="1px" CellPadding="3" GridLines="None">
